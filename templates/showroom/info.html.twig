{% extends 'base.html.twig' %}

{% block title %}{{model.marque.name}} {{model.name}}{% endblock %}

{% block body %}
    <div class="container full">
        <p>{{model.marque.name}} {{model.name}}</p>
        <div class="carousel">
            <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false">
                <div class="carousel-indicators">
                    {% for image in img %}
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="{{loop.index0}}" {% if loop.first %} class="active" aria-current="true" {% endif %} aria-label="Slide {{loop.index}}"></button>
                    {% endfor %}  
                </div>
                <div class="carousel-inner">
                    {% for image in img %}
                        <div class="carousel-item {% if loop.first %}active{% endif %}">
                            <img class='carousel' src="{{image.Url}}" alt="image de {{image.id}}">
                        </div>
                    {% endfor %}
                    
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <p>annee model : {{model.yearModele}}</p>
        <p>desc : {{desc}}</p>
        <p>price : {{price}}</p>
        <p>KM : {{km}} km</p>
        <p>proprio : {{proprio}}</p>
        <p>cylidree : {{cylidree}}</p>
        <p>ch : {{ch}}</p>
        <p>annee : {{annee | date('d/m/y')}}</p>
        <p>carbu : {{carbu.type}}</p>
        <p>transmi : {{transmi.type}}</p>
        <p>boite : {{boite.type}}</p>
            <h6>Equipements</h6>
            <ul>
        {% for equipement in opt %}
                <li>{{equipement.name}}</li>
        {% endfor %}
            </ul>
        <div class="btn mt-4">
            <a href="{{path('showroom')}}">Retour au showroom</a>
        </div>
    </div>
{% endblock %}